<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.SignInActivity">

    <TextView
        android:id="@+id/tv_signin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/notosanskr_bold"
        android:text="@string/tv_signin_id"
        android:textColor="@color/sopt_black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_signin_logo" />

    <EditText
        android:id="@+id/et_signin_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_signin_edittext"
        android:ems="10"
        android:fontFamily="@font/notosanskr_regular"
        android:hint="@string/et_signin_id"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="126dp"
        android:paddingBottom="12dp"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signin_id" />

    <TextView
        android:id="@+id/tv_signin_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/notosanskr_bold"
        android:text="@string/tv_signin_pw"
        android:textColor="@color/sopt_black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_signin_id" />

    <EditText
        android:id="@+id/et_signin_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_signin_edittext"
        android:ems="10"
        android:fontFamily="@font/notosanskr_regular"
        android:hint="@string/et_signin_pw"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingTop="13dp"
        android:paddingEnd="155dp"
        android:paddingBottom="13dp"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signin_pw" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signin_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/rectangle_signin_border_5dp"
        android:backgroundTint="@color/sopt_main_purple"
        android:fontFamily="@font/notosanskr_bold"
        android:gravity="center"
        android:paddingStart="139dp"
        android:paddingTop="11dp"
        android:paddingEnd="139dp"
        android:paddingBottom="13dp"
        android:text="@string/btn_signin_login"
        android:textColor="@color/sopt_white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_signin_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signin_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rectangle_signin_border_5dp"
        android:backgroundTint="@color/sopt_sub_purple"
        android:fontFamily="@font/notosanskr_bold"
        android:gravity="center"
        android:paddingStart="132dp"
        android:paddingTop="11dp"
        android:paddingEnd="132dp"
        android:paddingBottom="13dp"
        android:text="@string/btn_signin_signup"
        android:textColor="@color/sopt_white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_github" />


</androidx.constraintlayout.widget.ConstraintLayout>